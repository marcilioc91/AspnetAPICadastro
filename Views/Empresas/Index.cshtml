@model IEnumerable<TesteColmeiaAPI.Models.Empresa>

@{
    ViewBag.Title = "Empresas";
}

<h2>Empresas</h2>

<p>
    @Html.ActionLink("Cadastrar Empresa", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cnpj)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nome_fantasia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cep)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.logradouro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.data_do_cadastro)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.cnpj)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.nome_fantasia)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.telefone)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.cep)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.logradouro)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.data_do_cadastro)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
        @Html.ActionLink("Visualizar", "Details", new { id = item.id }) |
        @Html.ActionLink("Excluir", "Delete", new { id = item.id })
    </td>
</tr>
}

</table>
